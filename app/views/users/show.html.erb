<h1>Welcome, <%=current_user.first_name%></h1>
<a href="/users/<%=current_user.id%>/edit">Edit my profile</a>
<h3> Here are your events </h3>
<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Host</th>
        <th>Action/status</th>
    </tr>
    <%@event.each do |e|%>
    <tr>
        <td><a href="/event/<%=e.id%>"><%= e.name%></a></td>
        <td><%= e.date%></td>
        <td><%= e.location%></td>
        <td><%= e.user.first_name%></td>
        <td><a>Join</a></td>
    </tr>
    <%end%>
</table>
<h3> Here are some of the events you're not in </h3>
<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Host</th>
        <th>Action/status</th>
    </tr>
    <%@other.each do |e|%>
    <tr>
        <td><a href="/event/<%=e.id%>"><%= e.name%></a></td>
        <td><%= e.date%></td>
        <td><%= e.location%></td>
        <td><%= e.user.first_name%></td>
        <td><a href="/events/<%=e.id%>">Join</a></td>
    </tr>
    <%end%>
</table>
<h1>Add a new event</h1>
<form method="POST" action="/events/new">
<input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
Name: <input type="text" name="name">
<br>
Date: <input type="date" name="date">
<br>
Location: <input type="text" name="location">
<br>
<input type="submit" value="Add Event">
</form>
